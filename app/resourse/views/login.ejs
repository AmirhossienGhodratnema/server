<%- include('fixedFiles/header'); -%>

<div class="full-h">
  <div class="h-100 w-100 d-flex align-items-center justify-content-center">
    <div class="w-50 mt-4">
      <div class="container mt-5">
        <div class="card">
          <div class="card-header">
            <h3>ورود</h3>
          </div>
          <% if(massage.length > 0) { %>

          <div
            class="
              d-flex
              justify-content-between
              align-items-center
              alert alert-danger alert-dismissible
              fade
              show
            "
          >
            <% massage.forEach(err => { %>
            <div><p class="m-0"><%= err %></p></div>
            <% }) %>
            <button
              type="button"
              class="close btn"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <% } %>

          <div class="card-body">
            <form class="d-flex flex-column" action="/login" method="post">
              <div class="form-group mt-3">
                <label for="name" class="mb-2">نام کاربری یا ایمیل</label>
                <input type="text" class="form-control" id="name" name="name" />
              </div>

              <div class="form-group my-4">
                <label for="password" class="mb-2">پسورد</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                />
              </div>

              <div><%- captcha %></div>

              <button type="submit" class="btn btn-primary my-4">ورود</button>
            </form>
          </div>
          <!-- <div class="card-footer">

          </div> -->
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('fixedFiles/footer'); -%>
