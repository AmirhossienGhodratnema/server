<div class="col-10">
    <div class="main-style-div">
        <div>
            <div class="d-flex justify-content-between mt-5">
                <h3>دوره ها</h3>
                <div>
                    <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                        <!--  -->
                        <a href="/admin/categories/create" class="btn btn-primary">دسته جدید</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="border mt-4">
            <table class="table table-striped">
                <thead>
                    <tr class="text-center">
                        <th scope="col">عنوان دسته</th>
                        <th scope="col">نوع دسته</th>
                        <th scope="col">تنظیمات</th>
                    </tr>
                </thead>

                <tbody>
                    <% categories.docs.forEach(cat=> { %>

                        <tr class="text-center">

                            <td>
                                <a href="#">
                                    <%= cat.name %>
                                </a>
                            </td>
                            <td>
                                <%= cat.parent ? cat.parent.name : 'دسته اصلی' %>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                                    <form action="/admin/categories/<%= cat.id %>?_method=DELETE" method="POST">
                                        <a href="/admin/categories/<%= cat.id %>/edit"
                                            class="btn btn-sm  text-decoration-none btn-primary">ویرایش</a>
                                        <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                                    </form>
                                </div>
                            </td>


                        </tr>
                        <% }) %>

                </tbody>
            </table>
            <%- include('./../../home/layout/pagination.ejs' , {pagination: categories}) %>
        </div>
    </div>
</div>