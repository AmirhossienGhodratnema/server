<div class="col-10">
    <div class="main-style-div">
        <div>
            <div class="d-flex justify-content-between mt-5">
                <h3>سطوح دسترسی</h3>
                <div>
                    <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                        <!--  -->
                        <a href="/admin/user/role/create" class="btn btn-primary">ایجاد سطح دسترسی</a>
                        <a href="/admin/user/permissions" class="btn btn-danger">اجازه دسترسی دسترسی</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="border mt-4">
            <table class="table table-striped">
                <thead>
                    <tr class="text-center">
                        <th scope="col">عنوان اجازه</th>
                        <th scope="col">توضیح</th>
                        <th scope="col">تنظیمات</th>
                    </tr>
                </thead>

                <tbody>
                    <% roles.docs.forEach(role => { %>

                        <tr class="text-center">
                            <td><%= role.name %></td>
                            <td><%= role.lable %></td>
                            <td>
                                <div role="group" aria-label="Basic example">
                                    <form class=" btn-group btn-group-sm"
                                    
                                        action="/admin/user/role/<%= role.id %>?_method=DELETE" method="POST">
                                        <a href="/admin/user/role/<%= role._id %>/edit"
                                            class="btn btn-primary">ویرایش</a>
                                        <button type="submit" class="btn btn-danger">حذف</button>
                                    </form>
                                </div>
                            </td>
                        </tr>

                        <%}) %>
                </tbody>
            </table>
        </div>
        <%- include('./../../home/layout/pagination.ejs' , {pagination: roles}) %>
    </div>
</div>


<link rel="stylesheet" href="/css/chosen.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.6/chosen.jquery.min.js"></script>


<script src="/ckeditor/ckeditor.js"></script>

<script>
  $('.form-control-chosen').chosen({});
</script>