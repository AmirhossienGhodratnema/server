<div class="col-10">
  <div class="main-style-div">
    <div>
      <div class="d-flex justify-content-between mt-5">
        <h3>افزودن دوره</h3>
      </div>
    </div>
    <hr />
    <%- include(viewPath('resourse/views/home/layout/errorMassage.ejs')); -%>
      <div>
        <form action="/admin/user/addRole/<%= user.id %>" method="post">
        <div class="mb-3">
            <label for="name">نام کاربری</label>
            <input
              type="name"
              class="form-control mt-2"
              name="name"
              value="<%= user.name %> "
            />
          </div>
          <div class="form-group">
            <label class="mb-2" for="roles">دسته</label>
            <select class="form-control form-control-chosen" name="roles" id="roles" multiple>
              <% roles.forEach(role=> { %>
                <option value="<%= role.id %>"  >
                  <%= role.name %>
                </option>

                <% }) %>
            </select>
          </div>
          <button type="submit" class="btn btn-primary">ویرایش</button>
        </form>
      </div>
  </div>
</div>


<link rel="stylesheet" href="/css/chosen.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.6/chosen.jquery.min.js"></script>
<script>

  $('.form-control-chosen').chosen({});
</script>