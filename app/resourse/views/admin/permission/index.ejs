<div class="col-10">
    <div class="main-style-div">
        <div>
            <div class="d-flex justify-content-between mt-5">
                <h3>دوره ها</h3>
                <div>
                    <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                        <!--  -->
                        <a href="/admin/user/permissions/create" class="btn btn-primary">ایجاد اجازه دسترسی</a>
                        <a href="/admin/episode" class="btn btn-danger">سطوح دسترسی</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="border mt-4">
            <table class="table table-striped">
                <thead>
                    <tr class="text-center">
                        <th scope="col">عنوان اجازه</th>
                        <th scope="col">توضیح</th>
                        <th scope="col">تنظیمات</th>
                    </tr>
                </thead>

                <tbody>
                    <% permissions.docs.forEach(permission=> { %>

                        <tr class="text-center">
                            <td><%= permission.name %></td>
                            <td><%= permission.lable %></td>
                            <td>
                                <div role="group" aria-label="Basic example">
                                    <form class=" btn-group btn-group-sm"
                                    
                                        action="/admin/user/permissions/<%= permission.id %>?_method=DELETE" method="POST">
                                        <a href="/admin/user/permissions/<%= permission._id %>/edit"
                                            class="btn btn-primary">ویرایش</a>
                                        <button type="submit" class="btn btn-danger">حذف</button>
                                    </form>
                                </div>
                            </td>
                        </tr>

                        <%}) %>
                </tbody>
            </table>
        </div>
        <%- include('./../../home/layout/pagination.ejs' , {pagination: permissions}) %>
    </div>
</div>