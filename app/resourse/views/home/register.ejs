<div class="full-h">
  <div class="h-100 w-100 d-flex align-items-center justify-content-center">
    <div class="w-50 mt-4">
      <div class="container mt-5">
        <div class="card">
          <div class="card-header">
            <h3>ثبت نام</h3>
          </div>
          <%- include('layout/errorMassage'); -%>

          <div class="card-body">
            <form
              class="d-flex flex-column"
              action="/auth/register"
              method="post"
            >
              <div class="form-group mt-3">
                <label for="name" class="mb-2">نام کاربری</label>
                <input type="text" class="form-control" id="name" name="name" />
              </div>

              <div class="form-group my-4">
                <label for="email" class="mb-2">ایمیل</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="email"
                />
              </div>

              <div class="form-group my-4">
                <label for="password" class="mb-2">پسورد</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                />
              </div>

              <div><%- captcha %></div>

              <div class="d-flex align-items-center">
                <button type="submit" class="btn btn-primary my-4">ثبت نام</button>
                
                <a href="/auth/google" class="btn btn-danger mx-2">
                  ورود با اکانت گوگل
                </a>

                <a href="/" class="mx-2" >رمز عبور خود را فراموش کرده‌ام</a>
              </div>
            </form>
          </div>
          <!-- <div class="card-footer">
  
            </div> -->
        </div>
      </div>
    </div>
  </div>
</div>
