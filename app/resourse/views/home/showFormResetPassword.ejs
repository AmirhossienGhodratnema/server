<div class="full-h">
    <div class="h-100 w-100 d-flex align-items-center justify-content-center">
      <div class="w-50 mt-4">
        <div class="container mt-5">
          <div class="card">
            <div class="card-header">
              <h3>فراموشی رمز عبور</h3>
            </div>
            <%- include('layout/errorMassage'); -%>
  
            <div class="card-body">
              <form
                class="d-flex flex-column"
                action="/auth/password/email"
                method="post"
              >
  
  
                <div class="form-group my-4">
                  <label for="email" class="mb-2">ایمیل</label>
                  <input
                    type="text"
                    class="form-control"
                    id="email"
                    name="email"
                  />
                </div>
  
            
  
                <div><%- captcha %></div>
  
                <div class="d-flex align-items-center">
                  <button type="submit" class="btn btn-primary my-4">دریافت لینک</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  